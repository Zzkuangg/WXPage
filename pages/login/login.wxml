<view class="container"> 
 
 <view class="login-icon"> 
 <image class="login-img" src="https://www.zzkuang.top/WX/getimg?pic=showjpg"></image> 
 </view> 
 <view class="login-from"> 
 <form bindsubmit="loginTo">
 <!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="https://www.zzkuang.top/WX/getimg?pic=us_namepng"></image> 
  <label class="loginLab">账号</label> 
  <input class="inputText" placeholder="请输入账号" name="username" /> 
 </view> 
 <view class="line"></view> 
 
 <!--密码-->
 <view class="inputView"> 
  
  <image class="keyImage" src="https://www.zzkuang.top/WX/getimg?pic=pwdpng"></image> 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" name="password" /> 
 </view> 
 
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" formType="submit" type="primary" size="{{primarySize}}" >登录</button> 
 </view> 
</form>
 </view> 
</view>
